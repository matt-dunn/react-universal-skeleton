{
  "presets": [
    "@babel/preset-typescript",
    [
      "@babel/preset-env",
      {
        "modules":  false,
        "useBuiltIns": "usage",
        "targets": {
          "chrome": "78"
        },
        "corejs": {
          "version": 3,
          "proposals": true
        }
      }
    ],
    "@babel/preset-react"
  ],
  "plugins": [
    ["emotion", {
      "inline": true,
      "sourceMap": true
    }],
    "@loadable/babel-plugin",
    "react-hot-loader/babel",
    ["module-resolver", {
      "root": ["./"],
      "alias": {
        "app": "./app",
        "components": "./components"
      }
    }],
    [
      "@babel/plugin-proposal-decorators",
      {
        "legacy": true
      }
    ],
    "@babel/plugin-proposal-class-properties",
    "lodash"
  ],
  "env": {
    "test": {
      "plugins": [
        [
          "@babel/plugin-proposal-decorators",
          {
            "legacy": true
          }
        ],
        "@babel/plugin-proposal-class-properties"
      ],
      "presets": [
        [
          "@babel/preset-env",
          {
            "debug": false,
            "targets": {
              "browsers": [
                "last 3 versions"
              ]
            }
          }
        ]
      ]
    }
  }
}
