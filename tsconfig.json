{
  "compilerOptions": {
      "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "app": ["./app"],
      "components": ["./components"]
    }
  },
  "include": [
    "**/*.ts*"
  ],
  "exclude": [
    "**/*.test.ts*"
  ]
}
